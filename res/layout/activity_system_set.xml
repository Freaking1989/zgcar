<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_10"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_4"
            android:gravity="center"
            android:text="@string/set"
            android:textColor="@color/color_11"
            android:textSize="@dimen/textstyle_title" />

        <ImageButton
            android:id="@+id/system_set_back"
            android:layout_width="@dimen/app_back_width"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="@string/welecome_string"
            android:padding="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_back_img_ib" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fadingEdge="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/system_set_message_remind"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/message_tixing"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_set_change_psw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/account_guanli"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_set_map"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/map"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_set_suggest"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/suggest"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_set_about"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="关于汽车管家"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/system_set_sign_out"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_fragment_account_basics"
        android:gravity="center"
        android:text="@string/quit"
        android:textColor="@color/color_12"
        android:textSize="@dimen/textstyle_content" />

</LinearLayout>