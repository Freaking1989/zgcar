<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zgcar.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_10"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_4"
            android:gravity="center"
            android:text="@string/edit_basics"
            android:textColor="@color/color_11"
            android:textSize="@dimen/textstyle_title" />

        <ImageButton
            android:id="@+id/edit_basics_back"
            android:layout_width="@dimen/app_back_width"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="@string/welecome_string"
            android:padding="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_back_img_ib" />

        <Button
            android:id="@+id/edit_basics_save"
            android:layout_width="@dimen/app_back_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="@string/save"
            android:textColor="@drawable/selector_save_textcolor"
            android:textSize="@dimen/textstyle_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/color_10"
        android:gravity="center"
        android:orientation="vertical" >

        <com.zgcar.com.util.CircleImageView
            android:id="@+id/edit_basics_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon"
            app:border_color="@color/color_9"
            app:border_width="@dimen/circle_image_view_width" />

        <ImageButton
            android:id="@+id/edit_basics_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/edit_basics_icon"
            android:layout_alignRight="@+id/edit_basics_icon"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_account_icon_camera" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/color_10"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/edit_basics_car_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/edit_baby_nick_name"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <TextView
                    android:id="@+id/edit_basics_car_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_9" />

            <LinearLayout
                android:id="@+id/edit_basics_phone_no"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="手机号"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <TextView
                    android:id="@+id/edit_basics_phone_no_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_9" />

            <LinearLayout
                android:id="@+id/edit_basics_set_car_no"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="车牌号"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <TextView
                    android:id="@+id/edit_basics_sex_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_9" />

            <LinearLayout
                android:id="@+id/edit_basics_set_type"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="型号"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <TextView
                    android:id="@+id/edit_basics_type_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_9" />

            <LinearLayout
                android:id="@+id/edit_basics_set_car_color"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_fragment_account_basics"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="颜色"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <TextView
                    android:id="@+id/edit_basics_set_car_color_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_9" />

            <LinearLayout
                android:id="@+id/edit_basics_set_weight"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                android:background="@drawable/selector_fragment_account_basics"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/wight"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <TextView
                    android:id="@+id/edit_basics_weight_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/weith_desc"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/textstyle_content" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/xiaohong"
                    android:padding="13dp"
                    android:src="@drawable/account_icon_arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>