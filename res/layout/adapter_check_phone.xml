<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/adapter_check_phone_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/color_8"
        android:textSize="@dimen/textstyle_desc"
        android:text="" />

    <TextView
        android:id="@+id/adapter_check_phone_send_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/adapter_check_phone_time"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/paopao_send"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text=""
        android:textSize="@dimen/textstyle_content"
        android:textColor="@color/color_6"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/adapter_check_phone_get_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_check_phone_time"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/textstyle_content"
        android:background="@drawable/paopao_get"
        android:text=""
        android:textColor="@color/color_6"
        android:visibility="invisible" />

</RelativeLayout>