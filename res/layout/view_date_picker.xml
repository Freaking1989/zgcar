<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_10"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="25dp"
    android:paddingRight="15dp" >

    <LinearLayout
        android:id="@+id/view_date_picker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/view_date_picker_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/view_date_picker_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8" />

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/view_date_picker_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8" />

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/view_date_picker_wheel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/view_date_picker_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8" />

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/view_date_picker_min"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
         android:layout_marginTop="15dp"
        android:layout_below="@+id/view_date_picker_layout"
        android:background="@color/color_9" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view_date_picker_layout"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/view_date_picker_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_negative"
            android:textColor="@drawable/selector_view_dialog_textcolor"
            android:textSize="@dimen/textstyle_content" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_9" >
        </View>

        <Button
            android:id="@+id/view_date_picker_yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_positive"
            android:textColor="@drawable/selector_view_dialog_textcolor"
            android:textSize="@dimen/textstyle_content" />
    </LinearLayout>

</RelativeLayout>