<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alertdialog" >

    <LinearLayout
        android:id="@+id/view_select_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/view_select_sex_bt_negative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_negative"
            android:textColor="@drawable/selector_popwindows_textcolor"
            android:textSize="@dimen/textstyle_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/select_sex_desc"
            android:textColor="@color/color_6"
            android:textSize="@dimen/textstyle_title" />

        <Button
            android:id="@+id/view_select_sex_bt_positive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_positive"
            android:textColor="@drawable/selector_popwindows_textcolor"
            android:textSize="@dimen/textstyle_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/view_select_sex"
        android:background="@color/color_8" />


    <RadioGroup
        android:id="@+id/view_select_sex_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_select_sex"
        android:layout_marginTop="1px"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/view_select_sex_rb1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="@string/man"
            android:textColor="@drawable/selector_radio_button_textcolor"
            android:textSize="@dimen/textstyle_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_9" />

        <RadioButton
            android:id="@+id/view_select_sex_rb2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="@string/woman"
            android:textColor="@drawable/selector_radio_button_textcolor"
            android:textSize="@dimen/textstyle_content" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_9" />

</RelativeLayout>