<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_alertdialog"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@null"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_remove_watch_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_6"
            android:textSize="@dimen/textstyle_title"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/view_remove_watch_tv1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|bottom"
            android:text=""
            android:textColor="@color/color_6"
            android:textSize="@dimen/textstyle_content" />

        <TextView
            android:id="@+id/view_remove_watch_tv2"
            android:textSize="@dimen/textstyle_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view_remove_watch_tv1"
            android:gravity="center|top"
            android:text=""
            android:textColor="@color/color_6"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/view_remove_watch_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_negative"
            android:textColor="@drawable/selector_view_dialog_textcolor"
            android:textSize="@dimen/textstyle_content" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_9" />

        <Button
            android:id="@+id/view_remove_watch_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_positive"
            android:textColor="@drawable/selector_view_dialog_textcolor"
            android:textSize="@dimen/textstyle_content" />
    </LinearLayout>

</LinearLayout>