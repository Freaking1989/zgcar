<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_10"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/share_to_other_weixin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/selector_share_app_weixin" />

        <ImageButton
            android:id="@+id/share_to_other_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/selector_share_app_qq" />

        <ImageButton
            android:id="@+id/share_to_other_weibo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/selector_share_app_weibo"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/view_share_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_8"
        android:text="@string/dialog_negative"
        android:textColor="@color/color_11"
        android:textSize="@dimen/textstyle_content" />

</LinearLayout>