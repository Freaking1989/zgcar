<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alertdialog" >

    <TextView
        android:id="@+id/select_solence_time_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/select_time_desc"
        android:textColor="@color/color_6"
        android:textSize="@dimen/textstyle_content" />

    <LinearLayout
        android:id="@+id/select_solence_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_solence_time_title"
        android:background="@color/color_11"
        android:orientation="horizontal" >

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/select_solence_time_wheelView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/select_solence_time_wheelView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

        <com.zgcar.com.wheelview.WheelView
            android:id="@+id/select_solence_time_wheelView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/select_solence_time_layout"
        android:background="@null"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/select_solence_time_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_negative"
            android:textColor="@drawable/selector_view_dialog_textcolor"
            android:textSize="@dimen/textstyle_content" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_9" />

        <Button
            android:id="@+id/select_solence_time_yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/dialog_positive"
            android:textColor="@drawable/selector_view_dialog_textcolor"
            android:textSize="@dimen/textstyle_content" />
    </LinearLayout>

</RelativeLayout>