<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_10"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        
        android:background="@color/color_4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_4"
            android:gravity="center"
            android:text="@string/interest"
            android:textColor="@color/color_11"
            android:textSize="@dimen/textstyle_title" />

        <ImageButton
            android:id="@+id/fragment_history_show_info_ib"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/xiaohong"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/title_icon_historicalroute" />
    </RelativeLayout>

    <ListView
        android:id="@+id/fragment_history_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/color_9"
        android:dividerHeight="1px"
        android:orientation="vertical"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>