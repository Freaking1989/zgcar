<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zgcar.com"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@color/color_4"
    android:paddingRight="5dp" >

    <!--  -->

    <com.zgcar.com.util.CircleImageView
        android:id="@+id/add_babys"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/title_icon_add_pressed"
        app:border_color="@color/color_9"
        app:border_width="@dimen/circle_image_view_width" />

    <TextView
        android:id="@+id/tv_list_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/add_babys"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:text="@string/new_watch"
        android:textColor="@color/color_6"
        android:textSize="@dimen/textstyle_content" />

    <ImageView
        android:id="@+id/add_new_terminal"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/icon_online"
        android:visibility="gone" />

</RelativeLayout>