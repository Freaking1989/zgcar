<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selector_fragment_account_basics"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp" >

        <TextView
            android:id="@+id/adapter_alartm_clock_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:text="@string/time"
            android:textColor="@color/black"
            android:textSize="@dimen/textstyle_content" />

        <TextView
            android:id="@+id/adapter_alartm_clock_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/time_desc"
            android:textSize="@dimen/textstyle_desc" />
    </LinearLayout>


        <CheckBox
            android:id="@+id/adapter_alartm_clock_checkbox"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_toggle"
            android:button="@null"
            android:checked="true"
            android:focusable="false" />

</LinearLayout>